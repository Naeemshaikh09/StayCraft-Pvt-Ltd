<% layout("/layouts/boilerplate") %>

<div class="legal-page py-4">
  <div class="legal-hero">
    <h1 class="legal-title">Contact</h1>
    <p class="legal-subtitle">
      Need help or want to report an issue? Reach out using the details below.
    </p>
    <p class="legal-meta">We typically respond within 1–3 business days.</p>
  </div>

  <div class="row g-4 mt-2">
    <div class="col-12 col-lg-6">
      <div class="card legal-card">
        <div class="card-body">
          <h3 class="legal-section-title">Support</h3>
          <p class="mb-2">
            Email: <b>support@staycraft.example</b>
          </p>
          <p class="mb-0 text-muted">
            Include your account email/username and a screenshot if possible.
          </p>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-6">
      <div class="card legal-card">
        <div class="card-body">
          <h3 class="legal-section-title">Report a listing</h3>
          <p class="mb-2">
            Email: <b>abuse@staycraft.example</b>
          </p>
          <p class="mb-0 text-muted">
            Please include the listing URL and explain what you’re reporting.
          </p>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card legal-card">
        <div class="card-body">
          <h3 class="legal-section-title">Common requests</h3>
          <ul class="mb-0">
            <li>Password reset issues: <a href="/forgot">Reset password</a></li>
            <li>Email verification: <a href="/verify-email/resend">Resend verification</a></li>
            <li>Browse listings: <a href="/listings">Explore</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>